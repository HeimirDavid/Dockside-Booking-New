@page
@*@model docside_bookingview_2.ViewModels.RegisterUserWithCompany*@
@model RegisterModel
@*@{
        ViewData["Title"] = "Register";
    }*@




<h1>@ViewData["Title"]</h1>

<div class="row">
    <div class="col-10 offset-1 col-md-4 offset-md-3">
        <form asp-route-returnUrl="@Model.ReturnUrl" method="post">

            <h4 class="pt-5 create-title">SKAPA EN NY ANVÄNDARE.</h4>
            <hr />
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Input.FirstName"></label>
                <input asp-for="Input.FirstName" class="form-control" />
                <span asp-validation-for="Input.FirstName" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Input.LastName"></label>
                <input asp-for="Input.LastName" class="form-control" />
                <span asp-validation-for="Input.LastName" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Input.Email"></label>
                <input asp-for="Input.Email" class="form-control" />
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Input.TelephoneNumber"></label>
                <input asp-for="Input.TelephoneNumber" class="form-control" />
                <span asp-validation-for="Input.TelephoneNumber" class="text-danger"></span>
            </div>


            <div class="form-group">
                <label asp-for="Input.Password"></label>
                <input asp-for="Input.Password" class="form-control" />
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Input.ConfirmPassword"></label>
                <input asp-for="Input.ConfirmPassword" class="form-control" />
                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
            </div>

            <input asp-for="Input.UserRole" type="radio" value="admin" />
            <label asp-for="Input.UserRole">Admin</label> <br />

            <input asp-for="Input.UserRole" type="radio" value="internKund" />
            <label asp-for="Input.UserRole">Intern kund</label> <br />

            <input asp-for="Input.UserRole" type="radio" value="externKund" />
            <label asp-for="Input.UserRole">Extern kund</label>



            <div class="form-group mt-3">
                <label>Företag</label> <br />
                <select class="searchableDropDown w-100 pb-2" name="Input.CompanyId" asp-items="Model.Companies">
                </select>

            </div>


            @*<button type="submit" class="btn btn-primary mb-5">Skapa</button>*@
            <div class="form-group">
                <button type="submit" class="btn btn-primary mt-3 mb-5">Skapa</button>
                <a asp-controller="User" asp-action="Index" class="btn btn-secondary mt-3 mb-5 ml-3">Ångra</a>
            </div>
        </form>
    </div>
</div>



@section Scripts {
    <partial name="_ValidationScriptsPartial" />

    <link href="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/css/select2.min.css" rel="stylesheet" />
    <script src="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/js/select2.min.js"></script>

    <script>
        $(document).ready(function () {
            $('.searchableDropDown').select2();
        });
    </script>
}













