@model List<docside_bookingview_2.ViewModels.RoomAvailibleNow>

<div class="startpage-bg-image">
    <div class="text-center mb-5">
        <h1 class="display-4">Välkommen till Dockside Office</h1>
        <h3>Ett kontorshotell och företagscenter för inspirerande arbete och effektiva möten</h3>
        @*<h3 class="create-title">BOKNINGSSIDA</h3>*@
        @*<p>Learn about <a href="https://docs.microsoft.com/aspnet/core">building Web apps with ASP.NET Core</a>.</p>*@
        <div class="row mt-5">
            <div class="col-8 offset-2 col-md-2 offset-md-5">
                <partial name="_SearchBookingForm">
            </div>
        </div>

    </div>
</div>
@*Buttons for toggle floors on mobile -----------------------------------------------------------------------------*@

<h4 class="create-title hide-on-md text-center mb-3">Tillgänglighet på våra våningar</h4>
<p class="text-center">
    <button class="btn btn-primary hide-on-md mx-3" type="button" data-toggle="collapse" data-target="#collapse_floor_1" aria-expanded="false" aria-controls="collapseExample">
        Våning 1
    </button>
    <button class="btn btn-primary hide-on-md mx-3" type="button" data-toggle="collapse" data-target="#collapse_floor_3" aria-expanded="false" aria-controls="collapseExample">
        Våning 3
    </button>
</p>
<div class="collapse show-on-md" id="collapse_floor_1">
    @*Våning 1 -----------------------------------------------------------------------------*@
    <div class="container">
        <h2 class="text-center mt-4">Våning 1</h2>


        <div class="row mt-5">
            <div class="col-md-8">
                <img src="~/staticImages/dockside-utan-beskrivning-1.png" alt="" width="100%" />
            </div>
            <div class="col-md-4 confroom-spacer pl-5">
                <h3 class="create-title">Våra Konferensrum</h3>
                <ul class="list-squares">
                    <li class="sq-beige">Dockside Mötesrum Ocra - 6 personer</li>
                    <li class="sq-brown">Dockside Mötesrum Rust - 6 personer</li>
                    <li class="sq-orange">Dockside Boardroom - 12 personer</li>
                    <li class="sq-light-blue">Dockside Konferensrum - 24 personer</li>
                    <li class="sq-dark-blue">Dockside Stora Konferensrum  - 40 personer</li>
                </ul>
            </div>
        </div>

        <div class="row mt-3">
            <div class="col-md-8 mt-5">
                @if (Model.Count() > 0)
                {
                    <h4 class="create-title">Tillgänglighet just nu</h4>
                    <hr />
                    <table class="table table-bordered table-striped mr-3 data-tables" style="width:100%">
                        <thead>
                            <tr>
                                <th width="40%">Namn</th>
                                <th width="25%">Kvadratmeter</th>
                                <th width="25%">Rumsinfo</th>
                                <th width="10%"></th>
                            </tr>
                        </thead>
                        <tbody>

                            @foreach (var room in Model)
                            {
                                if (room.Floor == "1" && room.Available && room.Active)
                                {
                                    <tr class="availible-now">
                                        <td width="25%">@room.RoomName</td>
                                        <td width="25%">@room.SquareMetres</td>
                                        <td width="25%">
                                            <a asp-controller="Rooms" asp-action="Details" asp-route-id="@room.RoomId"><i class="fas fa-2x fa-info-circle mr-2"></i></a>
                                        </td>

                                        <td width="25%">
                                            <a asp-controller="Booking" asp-action="Create" asp-route-id="@room.RoomId" class="btn btn-primary">Boka</a>
                                        </td>

                                    </tr>
                                }
                                else if (room.Floor == "1" && !room.Available && room.Active)
                                {
                                    <tr class="not-availible-now">
                                        <td width="25%">@room.RoomName</td>
                                        <td width="25%">@room.SquareMetres</td>
                                        <td width="25%">
                                            <a asp-controller="Rooms" asp-action="Details" asp-route-id="@room.RoomId"><i class="fas fa-2x fa-info-circle mr-2"></i></a>
                                        </td>

                                        <td width="25%">
                                            <a asp-controller="Booking" asp-action="Create" asp-route-id="@room.RoomId" class="btn btn-secondary px-3">Sök</a>
                                        </td>

                                    </tr>

                                }

                            }

                        </tbody>
                    </table>
                }
                else
                {
                    <p>Det finns inga rum att boka</p>
                }

            </div>
            @*<div class="col-md-4">
                    <partial name="_SearchBookingForm">
                </div>*@

        </div>
    </div>
</div>
<div class="collapse show-on-md" id="collapse_floor_3">
    @*//Våning 3 -----------------------------------------------------------------------------*@

    <div class="floor-two-container">
        <div class="container">
            <h2 class="text-center mt-4">Våning 3</h2>


