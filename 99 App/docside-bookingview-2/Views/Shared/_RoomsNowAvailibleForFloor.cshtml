                    <img src="~/staticImages/plan3.png" alt="" width="100%" />
                </div>
                <div class="col-md-4 confroom-spacer-2 pl-5">
                    <h3 class="create-title">Våra Konferensrum</h3>
                    <ul class="list-squares">
                        <li class="sq-yellow">Dockside Flex 1-4</li>
                    </ul>
                </div>
            </div>

            <div class="row mt-3">
                <div class="col-md-8 mt-5">
                    @if (Model.Count() > 0)
                    {
                        <h4 class="create-title">Tillgänglighet just nu</h4>
                        <hr />
                        <table class="table table-bordered table-striped mr-3 data-tables" style="width:100%">
                            <thead>
                                <tr>
                                    <th width="40%">Namn</th>
                                    <th width="25%">Kvadratmeter</th>
                                    <th width="25%">Rumsinfo</th>
                                    <th width="10%"></th>
                                </tr>
                            </thead>
                            <tbody>

                                @foreach (var room in Model)
                                {
                                    if (room.Floor == "3" && room.Available && room.Active)
