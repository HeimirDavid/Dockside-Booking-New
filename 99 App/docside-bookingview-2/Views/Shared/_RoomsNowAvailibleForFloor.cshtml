                                            <td width="25%">
                                                <a asp-controller="Rooms" asp-action="Details" asp-route-id="@room.RoomId"><i class="fas fa-2x fa-info-circle mr-2"></i></a>
                                            </td>

                                            <td width="25%">
                                                <a asp-controller="Booking" asp-action="Create" asp-route-id="@room.RoomId" class="btn btn-primary">Boka</a>
                                            </td>

                                        </tr>
                                    }
                                    else if (room.Floor == "3" && !room.Available && room.Active)
                                    {
                                        <tr class="not-availible-now">
                                            <td width="25%">@room.RoomName</td>
                                            <td width="25%">@room.SquareMetres</td>
                                            <td width="25%">
                                                <a asp-controller="Rooms" asp-action="Details" asp-route-id="@room.RoomId"><i class="fas fa-2x fa-info-circle mr-2"></i></a>
                                            </td>

                                            <td width="25%">
                                                <a asp-controller="Booking" asp-action="Create" asp-route-id="@room.RoomId" class="btn btn-secondary px-3">Sök</a>
                                            </td>

                                        </tr>

                                    }

                                }

                            </tbody>
                        </table>
                    }
                    else
