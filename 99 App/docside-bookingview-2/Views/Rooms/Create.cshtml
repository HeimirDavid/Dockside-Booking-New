@model docside_bookingview_2.Models.Room


<div class="row">
    <div class="col-10 offset-1 col-md-4 offset-md-3">
        <form asp-action="Create" method="post" enctype="multipart/form-data">
            <h4 class="pt-5 create-title">SKAPA ETT NYTT RUM.</h4>
            <hr />
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="strRoomName"></label>
                <input asp-for="strRoomName" class="form-control" placeholder="*Obligatorisk" />
                <span asp-validation-for="strRoomName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="dcmHour"></label>
                <input asp-for="dcmHour" asp-format="{0:C}" class="form-control" placeholder="*Obligatorisk" />
                <span asp-validation-for="dcmHour" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="dcmHalfDay"></label>
                <input asp-for="dcmHalfDay" class="form-control" placeholder="*Obligatorisk" />
                <span asp-validation-for="dcmHalfDay" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="dcmWholeDay"></label>
                <input asp-for="dcmWholeDay" class="form-control" placeholder="*Obligatorisk" />
                <span asp-validation-for="dcmWholeDay" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="dcmInternalDiscount"></label>
                <input asp-for="dcmInternalDiscount" class="form-control" placeholder="*Obligatorisk" />
                <span asp-validation-for="dcmInternalDiscount" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SquareMetres"></label>
                <input asp-for="SquareMetres" class="form-control" placeholder="*Obligatorisk" />
                <span asp-validation-for="SquareMetres" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="MaxPeople"></label>
                <input asp-for="MaxPeople" class="form-control" placeholder="*Obligatorisk" />
                <span asp-validation-for="MaxPeople" class="text-danger"></span>
            </div>



            @*<select asp-for="Floor" class="searchableDropDown w-100 pb-2" name="Input.CompanyId" asp-items="Model.Companies">*@


            <div class="form-group mt-3">
                <label asp-for="Floor"></label><br />
                <select asp-for="Floor" class="w-100" name="Input.CompanyId">
                    <option value="1" selected>Våning 1</option>
                    <option value="3">Våning 3</option>
                </select>
            </div>

            <div class="form-group">
                <label asp-for="ImageTitle" class="control-label mt-3">Bild på rummet</label>
                <input asp-for="ImageTitle" class="form-control" placeholder="Välj en titel på din bild" />
                <span asp-validation-for="ImageTitle" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ImageFile" class="control-label"></label>
                <input asp-for="ImageFile" accept="image/*" />
                <span asp-validation-for="ImageFile" class="text-danger"></span>
            </div>

            <div>
                <label asp-for="Available" class="mt-3">
                    Tillgänglig
                    <input asp-for="Available" type="checkbox">
                </label>
            </div>


            <div class="form-group">
                <button type="submit" class="btn btn-primary mt-3">Skapa</button>
                <a asp-action="Index" class="btn btn-secondary mt-3 ml-3">Ångra</a>
            </div>
        </form>

    </div>

</div>


