@model IEnumerable<docside_bookingview_2.Models.Room>

<div class="container">
    <div class="row">
        <div class="col-md-8 offset-3">
            <div>
                @*Våning 1 - Våning 1 -Våning 1 -Våning 1 -Våning 1 -Våning 1 -Våning 1 -Våning 1*@
                <h4 class="pt-5 create-title">BOKA RUM - VÅNING 1.</h4>
                <hr />

                @{
                    string message = TempData["Message"] as string;
                    if (!String.IsNullOrEmpty(message))
                    {
                        <div class="message">
                            <p class="text-danger">@message</p>
                        </div>
                    }
                }
                @if (Model.Count() > 0)
                {
                    <table id="bookings-1" class="table table-bordered table-striped" style="width:100%">
                        <thead>
                            <tr>
                                <th>Namn</th>
                                <th>Kvadratmeter</th>
                                <th>Max Antal Personer</th>
                                <th>Rumsinfo</th>
                                <th>Boka</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                if (item.Available && item.Floor == "1")
                                {
                                    <tr>
                                        <td width="30%">@item.strRoomName</td>
                                        <td width="25%">@item.SquareMetres</td>
                                        <td width="25%">@item.MaxPeople</td>
                                        <td width="10%">
                                            <a asp-controller="Rooms" asp-action="Details" asp-route-id="@item.Id"><i class="fas fa-2x fa-info-circle mr-2"></i></a>
                                        </td>

                                        <td width="10%">
                                            @*<a asp-action="Create" asp-route-id="@item.Id"><i class="fas fa-2x fa-calendar-plus mr-2"></i></a>*@
                                            <a asp-action="Create" asp-route-id="@item.Id" class="btn btn-primary">Boka</a>
                                        </td>

                                    </tr>
                                }
                            }
                        </tbody>
                    </table>

                    @*Våning 2 - Våning 2 -Våning 2 -Våning 2 -Våning 2 -Våning 2 -Våning 2 -Våning 2*@
                    <h4 class="pt-5 create-title">BOKA RUM - VÅNING 2.</h4>
                    <hr />

                    <table id="bookings-2" class="table table-bordered table-striped" style="width:100%">
                        <thead>
                            <tr>
                                <th>Namn</th>
                                <th>Kvadratmeter</th>
                                <th>Max Antal Personer</th>
                                <th>Rumsinfo</th>
                                <th>Boka</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                if (item.Available && item.Floor == "2")
                                {
                                    <tr>
                                        <td width="30%">@item.strRoomName</td>
                                        <td width="25%">@item.SquareMetres</td>
                                        <td width="25%">@item.MaxPeople</td>
                                        <td width="10%">
                                            <a asp-controller="Rooms" asp-action="Details" asp-route-id="@item.Id"><i class="fas fa-2x fa-info-circle mr-2"></i></a>
                                        </td>

                                        <td width="10%">
                                            @*<a asp-action="Create" asp-route-id="@item.Id"><i class="fas fa-2x fa-calendar-plus mr-2"></i></a>*@
                                            <a asp-action="Create" asp-route-id="@item.Id" class="btn btn-primary">Boka</a>
                                        </td>

                                    </tr>
                                }
                            }
                        </tbody>
                    </table>
                }
                else
                {
                    <p>Det finns inga rum att boka</p>
                }
            </div>
        </div>
    </div>
</div>

